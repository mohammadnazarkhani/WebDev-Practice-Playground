<UserControl x:Class="ImageServer.WPFClient.UserControls.MainToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ImageServer.WPFClient.UserControls">
    <ToolBarTray Background="#F0F0F0">
        <ToolBar Band="0">
            <local:ToolbarButton Command="{Binding UploadImageCommand}"
                                 Text="Upload"
                                 ToolTip="Upload Image"
                                 ImageSource="pack://application:,,,/Resources/upload.png"/>
            <local:ToolbarButton Command="{Binding LoadImagesCommand}"
                                 Text="Refresh"
                                 ToolTip="Refresh"
                                 ImageSource="pack://application:,,,/Resources/refresh.png"/>
        </ToolBar>
    </ToolBarTray>
</UserControl>
